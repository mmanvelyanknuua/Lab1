@model IStaTP_Lab1.Models.AuthorBook

@{
    ViewData["Title"] = "Create";
}

<h1>Додати книгу у автора</h1>

<h4>Книга</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.AuthorId" name="AuthorId" />
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexByAuthor" asp-route-authorId = "@ViewBag.AuthorId" asp-route-name = "@ViewBag.AuthorName">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
