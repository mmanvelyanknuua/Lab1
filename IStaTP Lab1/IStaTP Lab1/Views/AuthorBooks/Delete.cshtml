@model IStaTP_Lab1.Models.AuthorBook

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалити книгу у автора</h1>

<h3>Ви справді хочете видалити це?</h3>
<div>
    <h4>Книга</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-outline-danger" /> |
        <a asp-action="IndexByAuthor" asp-route-authorId="@Model.AuthorId" asp-route-name="@ViewBag.AuthorName">Повернутися до списку</a>
    </form>
</div>
