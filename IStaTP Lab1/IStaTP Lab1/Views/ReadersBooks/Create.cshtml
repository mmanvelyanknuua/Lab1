@model IStaTP_Lab1.Models.ReadersBook

@{
    ViewData["Title"] = "Create";
}

<h1>Додати</h1>

<h4>Книга</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookId" class="control-label"></label>
                <select asp-for="BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue" class="control-label"></label>
                <input asp-for="Issue" class="form-control" />
                <span asp-validation-for="Issue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanReturn" class="control-label"></label>
                <input asp-for="PlanReturn" class="form-control" />
                <span asp-validation-for="PlanReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class ="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FactReturn" class="control-label"></label>
                <input asp-for="FactReturn" class="form-control" />
                <span asp-validation-for="FactReturn" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewBag.ReaderId" name="ReaderId" />
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexByReader" asp-route-readerId="@ViewBag.ReaderId" asp-route-name="@ViewBag.ReaderName">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
